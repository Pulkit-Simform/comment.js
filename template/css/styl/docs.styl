@import reset
@import normalize
@import mixins

$navWidth = 275px
$headerHeight = 60px

body
  background url('../img/subtlenet2.png')

selection(hsla(114, 97%, 14%, 70%), #fff)

#header
  height 52px
  padding 7px 10px 0px 10px
  background #4c9242 url('../img/diamond_upholstery_green.png')
  box-shadow rgba(0, 0, 0, 0.2) 0 2px 4px

#cjs-main
  height 100%

.cjs-panel
  font-family "Myriad Pro", "Helvetica Neue", Helvetica, "Arial Unicode MS", Arial, sans-serif

#cjs-documentation
  position absolute
  top $headerHeight+10
  right $navWidth+5
  bottom 0
  left 0
  padding 0 30px
  overflow auto

#cjs-nav
  position fixed
  top $headerHeight
  right 0
  width $navWidth
  overflow hidden
  overflow-x auto
  height 100%
  user-select none
  // background-color #e8f1e8

#cjs-nav header
  padding 10px 0
  border-bottom 1px solid #BABABA

#cjs-toc
  width 93%
  margin-top 5px
  overflow auto
  position absolute
  top 46px
  bottom 60px

#cjs-nav li
  list-style-type none
  width 98%

#cjs-nav a
  text-decoration none
  padding 6px 18px
  display block
  color #4c9242
  transition background-color 150ms linear;

#cjs-nav a:hover
  background-color #dfe6df
  background-color rgba(8, 69, 1, 0.1)
  color #084501

#cjs-nav a.cjs-selected
  background-color #4e7949
  background-color rgba(8, 69, 1, 0.7)
  color #fff

#cjs-nav form
  position relative

#cjs-nav input
  width 233px
  height 13px
  padding 5px 8px 5px 27px
  border 1px solid #ABABAB
  color #333
  background #EDEDED url(../img/search.png) no-repeat 7px 5px
  box-sizing content-box
  border-radius 13px
  box-shadow inset 0 1px 4px rgba(0, 0, 0, 0.3)

#cjs-nav input:focus
  outline 0
  background-color #fff
  color black

#cjs-search-reset
  top -1px
  right 5px
  position absolute
  padding 8px 12px 6px 4px
  display block
  line-height 12px
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 20px
  font-weight bold
  color black
  text-shadow 0 1px 0 white
  border 0
  cursor pointer
  opacity 0.2
  background none

#cjs-search-reset:hover
  opacity 0.4

h1, h2, h3, h4, h5, h6
  margin 20px 0 10px 0
  font-family inherit
  font-weight bold
  line-height 1
  color inherit
  text-rendering optimizelegibility

h1
  font-size 38px
  margin-bottom 60px

h2
  font-size 38px

h3
  font-size 28px

h4
  font-size 20px

h5
  font-size 18px

h6
  font-size 16px

h1, h2, h3
  line-height 40px

h4, h5, h6
  line-height 20px

p
  margin 10px 0


/* API identation */
lvls = 0 1 2 3 4
lvl_0 = 0
for i in lvls
  lvl_0 += 16
  {'#cjs-nav .cjs-lvl-' + i + ' a'}
    padding-left unit(lvl_0, 'px')



/* Scrollbar */
.cjs-panel::-webkit-scrollbar
  width 10px
  height 10px
  background-color transparent
  border-radius 4px

.cjs-panel::-webkit-scrollbar-thumb
  border-radius 4px
  border 1px solid #ABABAB
  height 50px
  background-color rgba(0, 0, 0, 0.1)//#E9E9E9

.cjs-panel::-webkit-scrollbar-thumb:hover
  border 1px solid #969696
  background-color rgba(0, 0, 0, 0.2) //#DDDDDD

.cjs-panel::-webkit-scrollbar-thumb:active
  border 1px solid #7d7d7d
  background-color rgba(0, 0, 0, 0.3) //#CCCCCC

.cjs-panel::-webkit-scrollbar-button
  height 0
  display block
  background-color transparent