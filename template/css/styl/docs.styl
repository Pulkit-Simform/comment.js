@import normalize
@import mixins

$navWidth = 275px

#main
  height 100%

#documentation
  position absolute
  top 60px
  right $navWidth
  bottom 0
  left 0
  padding 0 30px 0 20px
  overflow auto

nav
  position fixed
  top 60px
  right 0
  width $navWidth
  overflow hidden
  overflow-x auto
  height 100%

nav ul
  overflow auto
  position absolute
  top 48px
  bottom 60px
  width 93%

nav li
  list-style-type none

nav a
  text-decoration none
  padding 9px 18px
  display block

nav a:hover
  background-color #EDEDED

nav form
  position relative

nav input
  display block
  margin 0 auto
  width 200px
  height 13px
  margin-top 13px
  padding 5px 8px 5px 27px
  border 1px solid #ABABAB
  color #333
  background #EDEDED url(../img/search.png) no-repeat 7px 5px
  box-sizing content-box
  border-radius 13px
  box-shadow inset 0 1px 4px rgba(0, 0, 0, 0.3)

nav input:focus
  outline 0
  background-color #fff
  color black

nav .search-reset
  top 3px
  right 19px
  position absolute
  padding 4px 12px 4px 4px
  line-height 12px
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 20px
  font-weight bold
  color black
  text-shadow 0 1px 0 white
  opacity 0.2

nav .search-reset:hover
  opacity 0.4


h1,
h2,
h3,
h4,
h5,
h6
  margin 10px 0
  font-family inherit
  font-weight bold
  line-height 1
  color inherit
  text-rendering optimizelegibility

h1
  font-size 36px

h2
  font-size 30px

h3
  font-size 24px

h1, h2, h3
  line-height 40px

h4, h5, h6
  line-height 20px

h4
  font-size 18px

h5
  font-size 14px

h6
  font-size 12px


/* Scrollbar */
.panel::-webkit-scrollbar
  width 10px
  height 10px
  background-color transparent

.panel::-webkit-scrollbar-thumb
  border-radius 4px
  border 1px solid #ABABAB
  height 50px

.panel::-webkit-scrollbar-thumb
  background-color #E9E9E9

.panel::-webkit-scrollbar-button
  height 0
  display block
  background-color transparent

.panel::-webkit-scrollbar-button:start:decrement,
.panel::-webkit-scrollbar-button:end:increment,
.panel::-webkit-scrollbar-button:start:decrement,
.panel::-webkit-scrollbar-button:end:increment
    width 0
    height 0
    background-color transparent