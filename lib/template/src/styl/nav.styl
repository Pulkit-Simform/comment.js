// ==========================================================================
// NAV
// ==========================================================================
#cjs-nav
  position fixed
  top $header-height + $global-sep
  right 0
  width $nav-width
  overflow hidden
  overflow-x auto
  height 100%
  user-select none
  .cjs-nav-header
    padding-bottom $global-sep
    margin-right $global-sep
    border-bottom 1px solid $nav-header-border-bottom-color
    height $nav-header-height - @padding-bottom - @border-bottom[0]

#cjs-toc
  width $toc-width
  overflow auto
  position absolute
  top $nav-header-height
  bottom $header-height + $global-sep*2

#cjs-nav
  li
    list-style-type none
    width $toc-item-width
  a
    padding 6px 18px
    display block
    transition background-color 150ms linear

.lt-ie8 #cjs-nav a
  height 1%

#cjs-nav a:hover
  background-color $nav-link-bg-color-hover

.lt-ie9 #cjs-nav a:hover
  background-color $nav-link-bg-color-hover-ie

#cjs-nav a.cjs-selected
  color $nav-link-color-selected
  background-color $nav-link-bg-color-selected

.lt-ie9 #cjs-nav a.cjs-selected
  background-color $nav-link-bg-color-selected-ie


#cjs-nav form
  position relative
  input
    height 13px
    padding 5px 8px 5px 27px
    border 1px solid $search-input-border-color
    color $search-input-color
    background $search-input-bg
    box-sizing content-box
    border-radius 13px
    box-shadow inset 0 1px 4px rgba(0, 0, 0, 0.3)
    // calc input width
    width ($nav-width) - (@padding[1]) - (@padding[3]) - (@border[0]*2) - $global-sep
    &:focus
      outline 0
      background-color $search-input-bg-focus
      color $search-input-focus-color

#cjs-search-reset
  top -1px
  right 0
  position absolute
  padding 6px 12px 8px 4px
  display block
  line-height 12px
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 20px
  font-weight bold
  color black
  text-shadow 0 1px 0 white
  border 0
  cursor pointer
  opacity 0.2
  background none
  &:hover
    opacity 0.4

// API indentation levels
lvls = 0 1 2 3 4
identation = 0
for i in lvls
  identation += 16
  {'#cjs-nav .cjs-lvl-' + i + ' a'}
    padding-left unit(identation, 'px')


